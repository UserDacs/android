<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base pastel gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FDEBEB"
                android:endColor="#E0F5FF"
                android:angle="45" />
        </shape>
    </item>

    <!-- Overlapping transparent circle -->
    <item android:left="30dp" android:top="50dp">
        <shape android:shape="oval">
            <solid android:color="#33FFFFFF" />
        </shape>
    </item>

    <!-- Another circle bottom-right -->
    <item android:right="40dp" android:bottom="40dp">
        <shape android:shape="oval">
            <solid android:color="#44FFFFFF" />
        </shape>
    </item>
</layer-list>
