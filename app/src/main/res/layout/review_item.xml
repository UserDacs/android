<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reviewItemLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/reviewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/reviewHeaderLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/reviewerImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_bg"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/reviewTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reviewerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alexa Wallers"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/ratingStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/reviewContent"
        android:layout_marginTop="4dp"
        android:text="Absolutely love this jacket! Stylish and comfortable. Great purchase, highly recomme..."
        android:textSize="14sp"
        android:textColor="#444444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
