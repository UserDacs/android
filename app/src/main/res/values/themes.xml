<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FixItNow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color.  android:background="#2A000000" -->
        <item name="colorPrimary">@color/blue_cus</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">@color/blue_cus</item>-->

        <item name="android:statusBarColor">#38000000</item>
        <item name="android:navigationBarColor">#1F000000</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Customize ActionBar styles -->
    <style name="CustomActionBar">
        <!-- Background color for ActionBar -->
        <item name="android:background">@color/toolbar_background_color</item>
        <!-- Text color for ActionBar -->
        <item name="android:textColorPrimary">@color/toolbar_text_color</item>
    </style>


    <!-- Custom theme for ChatActivity -->
    <style name="Theme.FixItNow.Chat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- No more translucent status/nav bars -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Make sure we draw system bar backgrounds -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Colors (optional) -->
        <item name="android:statusBarColor">#38000000</item>
        <item name="android:navigationBarColor">#1F000000</item>
        <!-- THIS makes the layout resize above the IME -->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <!-- Custom theme for ChatActivity -->
    <style name="Theme.FixItNow.ChatAct" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colors (optional) -->
        <item name="android:statusBarColor">#38000000</item>
        <item name="android:navigationBarColor">#1F000000</item>
    </style>

    <style name="RatingBarGoldTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">#FFD700</item> <!-- Gold -->
    </style>

    <style name="RatingBarGoldTheme2" parent="Widget.AppCompat.RatingBar">
        <item name="android:padding">0dp</item> <!-- Tanggalin ang padding -->
        <item name="android:layout_margin">0dp</item> <!-- Tanggalin ang margin -->
    </style>


    <style name="SizeChip">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SizeChipSelected">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.FixItNow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FixItNow.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FixItNow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>